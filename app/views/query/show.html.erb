<% provide(:title, title) %>
<div data-controller="filter-query-results">
  <div class="container">
    <h1>
      <%= solutions.count %>
      <%= I18n.exists?(title) ? t(title) : title %>
    </h1>
    <% if description.present? %>
      <p class="text-muted"><%= t(description) %></p>
    <% end %>
    <%= render partial: "query_nav", locals: { permitted_params: permitted_params } %>
  </div>
  <%= render partial: "query_table", locals: { solutions: solutions } %>
</div>
